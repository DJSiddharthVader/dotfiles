menu-1-1 = ""
menu-1-1-exec = tabbed -c zathura -e &
menu-1-2 = ""
menu-1-2-exec = vlc &
menu-1-3 = ""
menu-1-3-exec = inkscape &
menu-1-4 = ""
menu-1-4-exec = st &
menu-1-5 = ""
menu-1-5-exec = firefox --browser &
menu-1-6 = ""
menu-1-6-exec = firefox --private-window &
menu-1-7 = ""
menu-1-7-exec = steam &
menu-1-8 = ""
menu-1-8-exec = transmission-gtk &
menu-2-0 = ""
menu-2-0-exec = menu-open-0
menu-2-1 = ""
menu-2-1-exec = ~/.scripts/lock.sh
menu-2-2 = ""
menu-2-2-exec = ~/dotfiles/.scripts/polybar/bluetooth.sh
menu-2-3 = ""
menu-2-3-exec = ~/dotfiles/.scripts/polybar/protonvpn.sh toggle
menu-2-4 = ""
menu-2-4-exec = ~/dotfiles/.scripts/wallpaper.sh next
menu-2-5 = "⏼"
menu-2-5-exec = systemctl suspend
format-prefix-font = 5
format-suffix-font = 5
format-background = ${colors.color1}
format-prefix = ${root.applauncher-prefix}
format-prefix-foreground = ${colors.color1}
format-prefix-background = ${colors.transparent}
format-suffix = ${root.applauncher-suffix}
format-suffix-foreground = ${colors.color1}
format-suffix-background = ${colors.transparent}

[module/gamma]
type = custom/ipc
initial = 1
hook-0 = ~/dotfiles/.scripts/polybar/gamma.sh display
hook-1 = ~/dotfiles/.scripts/polybar/gamma.sh inc
hook-2 = ~/dotfiles/.scripts/polybar/gamma.sh dec
scroll-up   = polybar-msg hook gamma 2 && sleep 1 && polybar-msg hook gamma 1
scroll-down = polybar-msg hook gamma 3 && sleep 1 && polybar-msg hook gamma 1
format = " <output> "
format-prefix-font = 5
format-suffix-font = 5
format-background = ${colors.color2}
format-prefix = ${root.gamma-prefix}
format-prefix-foreground = ${colors.color2}
format-prefix-background = ${colors.transparent}
format-suffix = ${root.gamma-suffix}
format-suffix-foreground = ${colors.color2}
format-suffix-background = ${colors.transparent}
[module/gamma-ipc]
type = custom/script
exec = polybar-msg hook gamma 1 &>/dev/null

