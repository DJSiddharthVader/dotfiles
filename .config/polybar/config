;MODULES TO RE-WRITE WITH IPC
;- deluge - want ipc to change modes but continuous output
;- songnames - cant work with zscroll
;- reading - cant work with zscroll

;bar formatting
[settings]
screenchange-reload = true
compositing-background = over
compositing-foreground = over

[global/wm]
margin-top = 1
margin-bottom = 1

[colors]
;hack for getting colors to read from Xressources
include-file = ~/.cache/wal/polybarColors.wal
include-file = ~/dotfiles/.varfiles/polysep
transparent = #00000000

[fonts]
; for font awesome icons
font-0 = FontAwesome:format=truetype:style=Regular:size=12:antialias=false;3
; for weather icons
font-1 = Weather Icons:style=Regular;3
; text font
font-2 = MineCraftia:style=Regular:pixelsize=9;antialias=false;7
;font-2 = Pokemon Classic:style=Regular:pixelsize=8;antialias=false;1
;font-2 = Retro Gaming:style=Regular:pixelsize=9;antialias=false;2
;font-2 = Press Start 2P:style=Regular:pixelsize=6;2
;font-2 = Terminus:style=Regular:pixelsize=14;1
;font-2 = Nintendo DS BIOS:style=Regular:pixelsize=18;1
;font-2 = scientifica:style=Regular:size=28;1
;font-2 = Iosevka:pixelsize=10;2
; for powerline separators
font-3 = TerminessTTF Nerd Font Mono:style=Medium:pixelsize=20;4
; for scrolling text, want monospaced to module size doesnt change
font-4 = Terminus:style=Regular:pixelsize=13;1

[section/float]
tray-transparent = true
background = ${colors.transparent}
foreground = ${colors.foreground}
cursor-scroll = ns-resize
cursor-click = pointer
dim-value = 0
enable-ipc = true
monitor = ${env:MONITOR:}

width = 100%
height = 24
radius = 5.0
padding = 0
module-margin = 0
tray-padding = 0
fixed-center = false
tray-detached = true
;borders
border-top-size = 10
border-bottom-size = 10
border-left-size = 10
border-right-size = 10
border-color = #00000000
;lines
line-size = 3
line-color = #f00

font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}
font-3 = ${fonts.font-3}
font-4 = ${fonts.font-4}

[section/full]
tray-transparent = true
background = ${colors.transparent}
foreground = ${colors.foreground}
cursor-scroll = ns-resize
cursor-click = pointer
dim-value = 0
enable-ipc = true
monitor = ${env:MONITOR:}

width = 100%
height = 4%
radius = 0
padding = 0
module-margin = 0
tray-padding = 1
border-top-size = 0
border-bottom-size = 0
border-left-size = 0
border-right-size = 1
line-size = 3
line-color = #f00


;bars
[bar/floating_top]
inherit = section/float
fixed-center = true
modules-left = i3
modules-center =
modules-right = songnames mpd bluetooth protonvpn wlan volume gamma applauncher

[bar/floating_bot]
inherit = section/float
bottom = true
modules-left = date memory cpu temperature xkeyboard disk uptime weather deluge
modules-center =
modules-right = reading wall

[bar/bordered_top]
inherit = section/full
modules-left = i3
modules-center =
modules-right = songnames mpd bluetooth protonvpn wlan volume applauncher

[bar/bordered_bot]
inherit = section/full
bottom = true
modules-left = date battery memory cpu temperature xkeyboard disk uptime weather deluge
modules-center =
modules-right = reading wall

[bar/minimal]
inherit = section/float
height = 22
y-offset = 0
wm-restack = i3
border-top-size = 0
border-bottom-size = 0
tray-transparent = true
modules-left = i3 date cpu temperature xkeyboard
modules-center =
modules-right = songnames leftsuffix7 protonvpn wlan volume


;modules
[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.color1}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1
label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %index%
label-empty-background = ${colors.color1}
label-empty-padding = 1

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

ws-icon-0 = 10;
ws-icon-1 = 1;
ws-icon-2 = 2;
ws-icon-3 = 3;
ws-icon-4 = 4;
ws-icon-5 = 5;
ws-icon-6 = 6;
ws-icon-7 = 7;
ws-icon-8 = 8;
ws-icon-9 = 9;
ws-icon-default = 
;       ❁ ❂ ❃ ❇

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 0
label-mode-foreground = #000

; focused = Active workspace on focused monitor
label-focused = %index% %icon%
label-focused-background = ${module/bspwm.label-focused-background}
label-focused-padding = ${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index% %icon%
label-unfocused-background = ${colors.color8}
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

;visible = Active workspace on unfocused monitor
label-visible = %index% %icon%
label-visible-background = ${module/bspwm.label-empty-background}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %index% %icon%
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

format-prefix = ${colors.rightprefix}
format-prefix-foreground = ${colors.color8}
format-prefix-background = ${colors.background}
format-suffix = ${colors.rightsuffix}
format-suffix-foreground = ${colors.color8}
format-suffix-background = ${colors.background}

[module/focused]
type = custom/script
tail = true
exec = ${scripts.focused}
format-background = ${colors.color2}
format-prefix = ${colors.rightprefix}
format-prefix-foreground = ${colors.color2}
format-prefix-background = ${colors.background}
format-suffix = ${colors.rightsuffix}
format-suffix-foreground = ${colors.color2}
format-suffix-background = ${colors.background}

