[module/gamma]
type = custom/ipc
initial = 1
hook-0 = ~/dotfiles/.config/polybar/scripts/gamma.sh display
hook-1 = ~/dotfiles/.config/polybar/scripts/gamma.sh inc
hook-2 = ~/dotfiles/.config/polybar/scripts/gamma.sh dec
scroll-up   = polybar-msg hook gamma 2 && sleep 1 && polybar-msg hook gamma 1
scroll-down = polybar-msg hook gamma 3 && sleep 1 && polybar-msg hook gamma 1
format = " <output> "
format-prefix-font = 5
format-suffix-font = 5
format-background = ${root.gamma-color}
format-underline = ${root.gamma-underline}
format-prefix = ${root.gamma-prefix}
format-prefix-foreground = ${root.gamma-color}
format-prefix-background = ${colors.transparent}
format-suffix = ${root.gamma-suffix}
format-suffix-foreground = ${root.gamma-color}
format-suffix-background = ${colors.transparent}
[module/gamma-ipc]
type = custom/script
exec = polybar-msg hook gamma 1 &>/dev/null

