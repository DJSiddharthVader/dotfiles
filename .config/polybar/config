[section/float]
monitor = ${env:MONITOR:}
cursor-scroll = ns-resize
cursor-click = pointer
enable-ipc = true
fixed-center = false
dim-value = 0
width = 100%
height = 24
radius = 5.0
;background
background = ${colors.transparent}
foreground = ${colors.foreground}
tray-transparent = false
tray-detached = true
module-margin = 0
;borders
border-top-size = 5
border-bottom-size = 5
border-left-size = 10
border-right-size = 10
border-color = ${colors.transparent}
;lines
line-size = 3
line-color = #f00
;fonts
font-0 = ${fonts.font-icon}
font-1 = ${fonts.font-weather}
font-2 = ${fonts.font-main}
font-3 = ${fonts.font-overflow}
font-4 = ${fonts.font-powerline}
font-5 = ${fonts.font-scrolling}

