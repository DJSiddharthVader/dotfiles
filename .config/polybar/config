;my modules
[module/wall]
type = custom/script
interval = 3
exec =  ~/dotfiles/.scripts/polywall.sh current
format-background = ${colors.color6}
format = %{A1:~/dotfiles/.scripts/polywall.sh prev:}  %{A}%{A1:~/dotfiles/.scripts/polywall.sh mode:}<label> %{A}%{A1:~/dotfiles/.scripts/polywall.sh next:} %{A}

[module/uptime]
type = custom/script
exec = ~/dotfiles/.scripts/uptimemonitor.sh
interval = 600
font = 1
format = " <label>"
format-background = ${colors.color14}

[module/weather]
type = custom/script
exec = ~/dotfiles/.scripts/openweathermap-simple.sh
interval = 600
label-font = 3
format-background = ${colors.color15}

[module/mycpu]
type = custom/script
exec = ~/dotfiles/.scripts/cpumonitor.sh
interval = 2
format-background = ${colors.color11}

[module/songnames]
type = custom/script
exec = ~/dotfiles/.scripts/mpdscroll.sh
format = "  <label>  "
format-background = ${colors.color5}
tail = true

[module/schedule]
type = custom/script
exec = ~/dotfiles/.scripts/sched.py 0 3
format-background = ${colors.color9}
tail = true

[module/taskcounter]
type = custom/script
exec = ~/dotfiles/.scripts/task_counter.sh
tail = true
format-background = ${colors.color8}


;base modules
[module/powermenu]
type = custom/menu
expand-right = true
format-spacing = 1

label-open = "  "
label-close = close
format-background = ${colors.color1}
label-separator = |
label-separator-foreground = ${colors.foreground}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = cancel
menu-2-0-exec = menu-open-0
menu-2-1 = power off
menu-2-1-exec = sudo shutdown

[module/xbacklight]
type = internal/xbacklight
enabele-scroll = true
format = <label>
label =  %percentage%%
format-background = ${colors.color2}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>
format-volume-background = ${colors.color3}
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

label-muted =  %percentage%%
format-muted-foreground = ${colors.foreground-alt}
format-muted-background = ${colors.color3}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/wlan]
type = internal/network
interface = wlp1s0
interval = 3.0
format-connected = %{A:st -e nmtui-connect&:}<ramp-signal><label-connected>%{A}
format-connected-background = ${colors.color4}
label-connected = " %essid%"
label-connected-foreground = ${colors.foreground}
format-disconnected = %{A:st -e nmtui-connect&:}disconnected%{A}
format-disconnected-background = ${colors.alert}
label-disconnected-foreground = ${colors.foreground-alt}
ramp-signal-foreground = ${colors.foreground}
ramp-signal-font = 6
ramp-signal-0 =  
ramp-signal-1 =  
ramp-signal-2 =  
ramp-signal-3 = 

[module/mpd]
type = internal/mpd
host=localhost
port=6600
;format-online =  <label-song> <icon-prev> <toggle> <icon-next> <icon-single> <icon-random> <bar-progress> <label-time>
format-online =  <icon-prev> <toggle> <icon-next> <icon-single> <icon-random> <bar-progress> <label-time>
format-online-background = ${colors.color5}
format-offline = MPD Offline
format-offline-background = ${colors.color5}

label-song =  %artist% - %title% 
label-time = %elapsed%/%total%
icon-play = 
icon-pause = 
icon-stop = 
icon-prev = 
icon-next = 
icon-random = 
icon-repeat = 
icon-single = 

toggle-on-foreground = ${colors.foreground}
toggle-off-foreground = ${colors.foreground-alt}

bar-progress-width = 15
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.color1}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1
label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %index%
label-empty-background = ${colors.color6}
label-empty-padding = 1

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 0
label-mode-foreground = #000

; focused = Active workspace on focused monitor
label-focused = %index% %icon%
label-focused-background = ${module/bspwm.label-focused-background}
label-focused-padding = ${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index% %icon%
label-unfocused-background = ${colors.color5}
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

;visible = Active workspace on unfocused monitor
label-visible = %index% %icon%
label-visible-background = ${module/bspwm.label-empty-background}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %index% %icon%
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

[module/date]
type = internal/date
interval = 5
date =
date-alt = "  %A, %B %d"
time = " %I:%M "
time-alt =  %I:%M
format-prefix-foreground = ${colors.foreground}
format-background = ${colors.color7}
label = %time%%date%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98
format-charging = <ramp-capacity> <label-charging>
format-charging-underline = ${colors.green}
format-charging-background = ${colors.color9}
format-discharging = <ramp-capacity> <label-discharging>
format-discharging-background = ${colors.color9}
format-full-prefix-foreground = ${colors.foreground}
format-full-background = ${self.format-charging-background}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.foreground}
animation-charging-framerate = 750

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-background = ${colors.color10}
label = %percentage_used%% %percentage_swap_used%%

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-background = ${colors.color12}
format-warn = <ramp> <label-warn>
format-warn-background = ${colors.alert}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.foreground}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
