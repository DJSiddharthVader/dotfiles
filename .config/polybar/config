;modules
[module/bspwm]
type = internal/bspwm
label-focused = %index%
label-focused-background = ${root.i3-color-2}
label-focused-foreground = ${root.i3-text-color-2}
label-focused-underline = ${root.i3-underline-2}
label-focused-padding = 1
label-occupied = %index%
label-occupied-background = ${root.i3-color}
label-occupied-foreground = ${root.i3-text-color}
label-occupied-underline = ${root.i3-underline}
label-occupied-padding = 1
label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-foreground = ${colors.alert}
label-urgent-underline = ${colors.alert}
label-urgent-padding = 1
label-empty = %index%
label-empty-background = ${root.i3-color-2}
label-empty-foreground = ${root.i3-text-color-2}
label-empty-underline = ${root.i3-underline-2}
label-empty-padding = 1

[module/i3]
type = internal/i3
index-sort = true
wrapping-scroll = false
pin-workspaces = true
strip-wsnumbers = true
format = <label-state> <label-mode>
ws-icon-1 = 1;I 
ws-icon-2 = 2;II 
ws-icon-3 = 3;III 
ws-icon-4 = 4;IV 
ws-icon-5 = 5;V 
ws-icon-6 = 6;VI 
ws-icon-7 = 7;VII 
ws-icon-8 = 8;VIII 
ws-icon-9 = 9;IX 
ws-icon-0 = 10;X 
ws-icon-default = 
;      
;ws-icon-1 = 1;1 
;ws-icon-2 = 2;2 
;ws-icon-3 = 3;3 
;ws-icon-4 = 4;4 
;ws-icon-5 = 5;5 
;ws-icon-6 = 6;6 
;ws-icon-7 = 7;7 
;ws-icon-8 = 8;8 
;ws-icon-9 = 9;9 
;ws-icon-0 = 10;10 
; Only show workspaces on the same output as the bar
label-mode-padding = 0
label-mode-foreground = #000
; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${module/bspwm.label-focused-background}
label-focused-foreground = ${module/bspwm.label-focused-foreground}
label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}
; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-background = ${module/bspwm.label-occupied-background}
label-unfocused-foreground = ${module/bspwm.label-occupied-foreground}
label-unfocused-underline = ${module/bspwm.label-occupied-underline}
label-unfocused-padding = ${module/bspwm.label-occupied-padding}
;visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${module/bspwm.label-empty-background}
label-visible-foreground = ${module/bspwm.label-empty-foreground}
label-visible-underline = ${module/bspwm.label-empty-underline}
label-visible-padding = 1
; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-foreground = ${module/bspwm.label-urgent-foreground}
label-urgent-underline = ${module/bspwm.label-urgent-underline}
label-urgent-padding = ${module/bspwm.label-urgent-padding}
format-prefix-font = 5
format-suffix-font = 5
format-prefix = ${root.i3-prefix}
format-prefix-foreground = ${root.i3-color}
format-prefix-background = ${colors.transparent}
format-suffix = ${root.i3-suffix}
format-suffix-foreground = ${root.i3-color}
format-suffix-background = ${colors.transparent}

