;MODULES TO RE-WRITE WITH IPC
;- deluge - want ipc to change modes but continuous output
;- songnames - cant work with zscroll
;- reading - cant work with zscroll

;bar formatting
[settings]
screenchange-reload = true
compositing-background = over
compositing-foreground = over

[global/wm]
margin-top = 1
margin-bottom = 1

[colors]
;hack for getting colors to read from Xressources
include-file = ~/.cache/wal/polybarColors.wal
include-file = ~/dotfiles/.config/polybar/separators.mode

