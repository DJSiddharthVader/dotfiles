[module/wall]
type = custom/ipc
initial = 1
hook-0 = ~/dotfiles/.scripts/wallpaper.sh display
hook-1 = ~/dotfiles/.scripts/wallpaper.sh prev back
hook-2 = ~/dotfiles/.scripts/wallpaper.sh next back
hook-3 = ~/dotfiles/.scripts/wallpaper.sh reload
click-left =   polybar-msg hook wall 2 && sleep 1 && polybar-msg hook wall 1
click-right =  polybar-msg hook wall 3 && sleep 1 && polybar-msg hook wall 1
click-middle = polybar-msg hook wall 4 && sleep 1 && polybar-msg hook wall 1
format = " %{T6}<output> %{T-}"
format-prefix-font = 5
format-suffix-font = 5
format-background = ${colors.color1}
format-prefix = ${root.wall-prefix}
format-prefix-foreground = ${colors.color1}
format-prefix-background = ${colors.transparent}
format-suffix = ${root.wall-suffix}
format-suffix-foreground = ${colors.color1}
format-suffix-background = ${colors.transparent}
[module/wall-ipc]
type = custom/script
exec = polybar-msg hook wall 1 &>/dev/null

