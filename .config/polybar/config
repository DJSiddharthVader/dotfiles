[module/songnames]
type = custom/script
tail = true
exec = ~/dotfiles/.config/polybar/scripts/mpdscroll.sh
format = "%{A1:~/dotfiles/.config/polybar/scripts/mpdscroll.sh toggle:}  %{T7}<label>%{T-}  %{A}"
; use different font for label to maintain monospace (not at size > 13 for Terminus?) so module width doesnt change during scrolling
format-background = ${colors.color7}
format-prefix = ${colors.leftpoint}
format-prefix-font = 5
format-prefix-foreground = ${colors.color7}
format-prefix-background = ${colors.background}

